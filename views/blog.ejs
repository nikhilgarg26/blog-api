<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>HomePage</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="/blogcover/<%= blog.coverImage %>" width="400px" />
            <p>
                <%= blog.body %>
            </p>
        </div>
        <div class="container mt-4">
            <h5>Created By:</h5>
            <img src="<%= blog.createdBy.profileImage %>" width="40px" />
            <%= blog.createdBy.fullName %>
        </div>

        <div class="container mt-4">
            <h5>Comments</h5>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" placeholder="Enter Comment" name="content" class="form-control" id="exampleInputEmail1"
                            aria-describedby="emailHelp">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            <% } %>

            <% comments.forEach(comment => { %>
                <div class="container mt-4">
                    <img src="<%= comment.createdBy.profileImage %>" width="40px"/>
                    <%= comment.createdBy.fullName %>
                    <p><%= comment.content %></p>
                </div>
             
            <% }) %>

        </div>
        <%- include('./partials/script') %>
</body>

</html>